	private static boolean isTelNo(String tel) {
		//11位   1开头   都是数字   第二位是3/5/7
		if (tel.length() != 11) {
			return false;
		}
		if (!(tel.startsWith("13") || tel.startsWith("15") || tel.startsWith("17"))) {
			return false;
		}
		char[] cs = tel.toCharArray();
		for (char c : cs) {
			if (c > '9' || c < '0') {
				return false;
			}
		}
		return true;
	}
}
